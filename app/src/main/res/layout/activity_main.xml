<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#32689E"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewPolecenie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wybierz, których kolorów nie ma we fladze Polski"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textAlignment="center"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:background="#1A2149"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#f3fafa"
            android:layout_margin="24dp"
            android:onClick="zlaOdpowiedz"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#329A20"
            android:layout_margin="24dp"
            android:onClick="dobraOdpowiedz"

            />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#59C6C6"
            android:layout_margin="24dp"
            android:onClick="dobraOdpowiedz"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#423368"
            android:onClick="dobraOdpowiedz"
            android:layout_margin="24dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#C52D42"
            android:onClick="zlaOdpowiedz"
            android:layout_margin="24dp"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFEB3B"
            android:onClick="dobraOdpowiedz"
            android:layout_margin="24dp"/>
    </LinearLayout>

</LinearLayout>